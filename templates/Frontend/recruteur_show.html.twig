{% extends 'frontendconnected/base.html.twig' %}

{% block title %}Offre{% endblock %}

{% block content %}
    {% if is_granted('ROLE_RECRUTEUR') %}
    <h1>Offre</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ offre.id }}</td>
        </tr>
        <tr>
            <th>NomEntreprise</th>
            <td>{{ offre.NomEntreprise }}</td>
        </tr>
        <tr>
            <th>Salaire</th>
            <td>{{ offre.Salaire }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ offre.Description }}</td>
        </tr>
        <tr>
            <th>Localisation</th>
            <td>{{ offre.Localisation }}</td>
        </tr>
        <tr>
            <th>NombreHeure</th>
            <td>{{ offre.NombreHeure }}</td>
        </tr>
        <tr>
            <th>TypeContrat</th>
            <td>{{ offre.TypeContrat }}</td>
        </tr>
        <tr>
            <th>NiveauEtude</th>
            <td>{{ offre.NiveauEtude }}</td>
        </tr>
        <tr>
            <th>Experience</th>
            <td>{{ offre.Experience }}</td>
        </tr>
        <tr>
            <th>Langue</th>
            <td>{{ offre.Langue }}</td>
        </tr>
        <tr>
            <th>DateCreation</th>
            <td>{{ offre.DateExpiration ? offre.DateExpiration|date('Y-m-d') : '' }}</td>
        </tr>
        <tr>
            <th>Tel</th>
            <td>{{ offre.Tel }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ offre.Email }}</td>
        </tr>
        </tbody>
    </table>
    <td class="hidden-xs center">
        <a href="{{ path('recruteur_index') }}"><button class="btn btn-warning">back to list</button></a>
    </td>
    <td class="hidden-xs center">
        <a href="{{ path('recruteur_edit', {'id': offre.id}) }}"><button class="btn btn-warning">edit</button></a>
    </td>

    {{ include('Frontend/recruteur_delete_form.html.twig') }}
    {% else %}
    <h1>Could not access this page</h1>
    {% endif %}
{% endblock %}
